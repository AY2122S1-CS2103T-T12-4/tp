<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root onCloseRequest="#handleExit" title="TutAssistor" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox prefHeight="540.0" prefWidth="724.0">
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

                                <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

                                                  <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100.0" minHeight="100.0" prefHeight="100.0" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
            <StackPane fx:id="infoPagePlaceholder" styleClass="pane-with-border">
                <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                </padding>
            </StackPane>
          <HBox VBox.vgrow="ALWAYS">
               <children>

                                                                                                                    <VBox fx:id="personList" alignment="CENTER" minWidth="340.0" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                     <Label alignment="CENTER" minWidth="340.0" prefHeight="21.0" prefWidth="33.0" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #FFFFFF; -fx-background-color: #808080;" text="Students" textFill="WHITE" />
                <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS">
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                     </StackPane>
              </VBox>

                                                                                            <VBox fx:id="tuitionList" alignment="CENTER" minWidth="340.0" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                     <Label alignment="CENTER" minWidth="340.0" prefHeight="21.0" prefWidth="33.0" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #FFFFFF; -fx-background-color: #808080;" text="Classes" textFill="WHITE" />
                <StackPane fx:id="tuitionListPanelPlaceholder" VBox.vgrow="ALWAYS" />
              </VBox>
               </children>
            </HBox>

                                                        <StackPane fx:id="statusbarPlaceholder" prefWidth="100.0" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
